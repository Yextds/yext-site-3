---
{
    "stream": {
        "$id": "ds_productCategories",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "ce_categoriesPage"
        ]
      },
      "fields": [
        "id",
        "name",
        "c_categories.name",
        "c_categories.c_categoryImage",
        "c_categories.slug"
      ],
      "localization": {
          "locales": ["en"]
      }
    },
    "urlFormat": "product-categories.html"
}
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{name}}</title>
        <meta name="description" content="{{description}}">
        {{>head}}
        <link rel="stylesheet" href="/css/font-awesome.min.css" />
        <link rel="stylesheet" href="/fonts/fonts.css" />
    </head>

    <body class="bg-white leading-normal text-sm md:text-base text-blackLight tracking-normal font-worksans">
        
        <!-- Include navbar -->
        {{>navbar}}
        <div class="w-full block h-px shadow"></div>
        <!-- Page title -->
        <div class="text-center w-full max-w-7xl mx-auto px-4 mb-10 mt-10">
            <h2 class="text-3xl md:text-5xl md:mb-4">Categories</h2>
        </div>

        <!-- Categories list -->
        <div class="w-full max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 gap-8 px-4 md:px-8 pb-16">

            {{#each c_categories}}
                <div class="relative group overflow-hidden">
                        <img class="w-full transition-all duration-1100 transform scale-100 group-hover:scale-150" src="{{c_categoryImage.url}}">
                        <div class="absolute top-0 left-0 bottom-0 right-0 bg-black bg-opacity-30 transition-all duration-500 transform scale-0 group-hover:scale-100"></div>
                        <div class="absolute bottom-5 md:bottom-8 left-5 md:left-8 bg-white bg-opacity-95 p-4 w-40 text-left">
                            <h3 class="text-3xl font-semibold">{{name}}</h3>
                            <a href="{{slug}}" class="hover:text-primary">Explore 
                                <svg class="inline-block w-4" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="25px" height="15px" viewBox="0 0 30 18" enable-background="new 0 0 30 18" xml:space="preserve">
                                    <path class="tatsu-svg-arrow-head" d="M20.305,16.212c-0.407,0.409-0.407,1.071,0,1.479s1.068,0.408,1.476,0l7.914-7.952c0.408-0.409,0.408-1.071,0-1.481
                                        l-7.914-7.952c-0.407-0.409-1.068-0.409-1.476,0s-0.407,1.071,0,1.48l7.185,7.221L20.305,16.212z"></path>
                                    <path class="tatsu-svg-arrow-bar" fill-rule="evenodd" clip-rule="evenodd" d="M1,8h28.001c0.551,0,1,0.448,1,1c0,0.553-0.449,1-1,1H1c-0.553,0-1-0.447-1-1
                                        C0,8.448,0.447,8,1,8z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
            {{/each}}

        </div>

        <!-- Footer newsletter section -->
        {{>newsletter}}
        {{>footer}}
    </body>

</html>