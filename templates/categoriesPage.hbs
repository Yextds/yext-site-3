---
{
    "stream": {
        "$id": "ds_productCategories",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "ce_categoriesPage"
        ]
      },
      "fields": [
        "id",
        "name",
        "c_categories.name",
        "c_categories.c_categoryImage",
        "c_categories.slug"
      ],
      "localization": {
          "locales": ["en"]
      }
    },
    "urlFormat": "product-categories.html"
}
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{{name}}</title>
        <meta name="description" content="{{description}}">
        {{>head}}
        <link rel="stylesheet" href="/css/font-awesome.min.css" />
        <link rel="stylesheet" href="/fonts/fonts.css" />
    </head>

    <body class="bg-white leading-normal text-sm md:text-base text-blackLight tracking-normal font-worksans">
        
        <!-- Include navbar -->
        {{>navbar}}

        <!-- Page title -->
        <div class="w-full max-w-7xl mx-auto py-8 px-6 text-center">
            <div class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-2xl md:mb-8">
                {{name}}
            </div>
        </div>

        <!-- Categories list -->
        <div class="flex flex-wrap w-full max-w-7xl mx-auto">

            {{#each c_categories}}
                <div class="w-full sm:w-1/2 md:w-1/2 lg:w-1/3 xl:w-1/4 px-4 text-center mb-10">
                    <div class="lg:w-2/4 w-full">
                        <img src="{{c_categoryImage.url}}" class="inline-block w-full h-full object-cover">
                    </div>
                    <h3 class="mb-3 sm:h-12">
                        <a class="tracking-wide no-underline hover:no-underline font-normal text-gray-800 text-base mb-8 hover:text-primary" href={{slug}}>
                            {{name}}
                        </a>
                    </h3>
                </div>
            {{/each}}

        </div>

        <!-- Footer newsletter section -->
        {{>newsletter}}
    </body>

</html>