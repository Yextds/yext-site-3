---
{
    "stream": {
        "$id": "ce_homePagesite",
        "source": "knowledgeGraph",
        "destination": "pages",
      "filter": {
        "entityTypes": [
          "ce_homePagesite3"
        ]
      },
      "fields": [
        "name",
        "description",
        "c_bannerTitle",
        "c_bannerImageAlt",
        "c_bannerDescription",
        "c_bannerImage",
        "c_bannerButtonLink",
        "c_bannerButtonText",

        "c_arrivalTitle",
        "c_arrivalDescription",

        "c_arrivalProducts.name",
        "c_arrivalProducts.slug",
        "c_arrivalProducts.photoGallery",
        "c_arrivalProducts.brand",
        "c_arrivalProducts.price",
        "c_arrivalProducts.color",
        "c_arrivalProducts.richTextDescription",

        "c_arrivalButtonLink",
        "c_arrivalButtonText",

        "c_collectionTitle",
        "c_collectionDescription",
        "c_collectionCategories.name",
        "c_collectionCategories.c_categoryImage",
        "c_collectionCategories.slug",

        "c_topRatedTitle",
        "c_topRatedDescription",
        "c_topRatedProducts.name",
        "c_topRatedProducts.slug",
        "c_topRatedProducts.photoGallery",
        "c_topRatedProducts.brand",
        "c_topRatedProducts.price",
        "c_topRatedProducts.color",
        "c_topRatedProducts.richTextDescription"
      ],

      "localization": {
          "locales": ["en"]
      }
    },
    "urlFormat": "index.html"
}
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> {{global.name}}</title>
    <meta name="description" content="{{global.name}}">
    {{>head}}
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/fonts/fonts.css" />
  </head>
  <body class="bg-white text-gray-600 font-Poppins leading-normal text-base tracking-normal">
    {{>navbar}}

    <!-- Banner -->
    <div class="w-full relative">
        <img class="max-w-full w-full" src="{{c_bannerImage}}" alt="{{c_bannerImageAlt}}">
        <div class="w-full px-4 max-w-xl lg:max-w-3xl text-center text-white absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            <h6 class="uppercase text-sm md:text-lg font-normal mb-2 md:mb-4">{{c_bannerTitle}}</h6>
            <h1 class="text-xl md:tact-5xl lg:text-7xl leading-6 md:leading-tight">{{c_bannerDescription}}</h1>
            <a href="{{c_bannerButtonLink}}" class="bg-white text-blackLight rounded inline-block px-6 md:px-8 py-2 md:py-3 mt-3 md:mt-8 font-medium text-sm transition-all duration-300 hover:bg-primary hover:text-white">{{c_bannerButtonText}}</a>
        </div>
    </div>

    <!-- New Arrivals -->
    <div class="w-full max-w-screen-xl py-10 lg:py-20 mx-auto">
        <div class="text-center w-full px-4">
            <h2 class="text-3xl md:text-5xl md:mb-4">{{c_arrivalTitle}}</h2>
            <p class="text-base md:text-lg max-w-lg mx-auto">{{c_arrivalDescription}}</p>
        </div>

        <div class="w-full flex flex-wrap">
            {{#each c_arrivalProducts}}
                <div class="group cursor-pointer w-1/2 md:w-1/4 px-4 text-center mt-8 lg:mt-16">
                    <div class="relative h-0 inline-block w-full pb-[80%] overflow-hidden group-hover:bg-black group-hover:bg-opacity-5">

                        {{#each photoGallery}}
                            {{#if @first}} 
                                <img class="absolute top-0 left-0 w-full h-full object-contain transition-all duration-1000 transform scale-100 group-hover:scale-150" src="{{image.url}}">
                            {{/if}}
                        {{/each}}

                        <a href="#" class="absolute bottom-0 left-0 w-full py-3 px-6 bg-primary text-white text-center text-sm font-medium uppercase transition-all duration-500 opacity-0 group-hover:opacity-100 invisible group-hover:visible hover:bg-secondary">
                            <svg class="w-4 h-4 inline-block mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                <path fill="#fff" d="M569.354 231.631C512.969 135.949 407.81 72 288 72 168.14 72 63.004 135.994 6.646 231.631a47.999 47.999 0 0 0 0 48.739C63.031 376.051 168.19 440 288 440c119.86 0 224.996-63.994 281.354-159.631a47.997 47.997 0 0 0 0-48.738zM288 392c-75.162 0-136-60.827-136-136 0-75.162 60.826-136 136-136 75.162 0 136 60.826 136 136 0 75.162-60.826 136-136 136zm104-136c0 57.438-46.562 104-104 104s-104-46.562-104-104c0-17.708 4.431-34.379 12.236-48.973l-.001.032c0 23.651 19.173 42.823 42.824 42.823s42.824-19.173 42.824-42.823c0-23.651-19.173-42.824-42.824-42.824l-.032.001C253.621 156.431 270.292 152 288 152c57.438 0 104 46.562 104 104z"></path>
                            </svg>Quick View
                        </a>
                    </div>
                    <div class="my-3 text-xs uppercase"><a class="inline-block text-black text-opacity-50 mx-1" href="#">Living</a><a href="#" class="inline-block text-black text-opacity-50 mx-1">Bedroom</a><a href="#" class="inline-block text-black text-opacity-50 mx-1">Dining</a></div>
                    <h3 class="text-lg font-semibold mb-2"><a href="#" class="hover:text-primary text-clip truncate inline-block w-full">{{name}}</a></h3>
                    <div class=""><strong class="font-medium">${{price.value}}</strong></div>
                </div>
            {{/each}}
        </div>

        <div class="text-center w-full px-4 mt-8 lg:mt-16">
            <a href="{{c_arrivalButtonLink}}" class="inline-block py-3 px-12 rounded bg-primary text-white text-sm font-medium uppercase text-center transition-all duration-500 hover:bg-secondary">{{c_arrivalButtonText}}</a>
        </div>
    </div>
    <div class="border-b border-black border-opacity-10"></div>

    <!-- Collections -->
    <div class="w-full max-w-screen-xl py-10 lg:py-20 mx-auto">
        <div class="text-center w-full px-4 mb-8 lg:mb-12">
            <h2 class="text-3xl md:text-5xl md:mb-4">{{c_collectionTitle}}</h2>
            <p class="text-base md:text-lg max-w-lg mx-auto">{{c_collectionDescription}}</p>
        </div>
        <div class="w-full flex flex-wrap px-2">
            
            {{#each c_collectionCategories}}
                <div class="cursor-pointer w-full sm:w-1/2 px-2 text-center mt-4">
                    <div class="relative group overflow-hidden">
                        <img class="w-full transition-all duration-1100 transform scale-100 group-hover:scale-150" src="{{c_categoryImage.url}}">
                        <div class="absolute top-0 left-0 bottom-0 right-0 bg-black bg-opacity-30 transition-all duration-500 transform scale-0 group-hover:scale-100"></div>
                        <div class="absolute bottom-5 md:bottom-8 left-5 md:left-8 bg-white bg-opacity-95 p-4 w-40 text-left">
                            <h3 class="text-3xl font-semibold">{{name}}</h3>
                            <a href="#" class="hover:text-primary">Explore 
                                <svg class="inline-block w-4" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="25px" height="15px" viewBox="0 0 30 18" enable-background="new 0 0 30 18" xml:space="preserve">
                                    <path class="tatsu-svg-arrow-head" d="M20.305,16.212c-0.407,0.409-0.407,1.071,0,1.479s1.068,0.408,1.476,0l7.914-7.952c0.408-0.409,0.408-1.071,0-1.481
                                        l-7.914-7.952c-0.407-0.409-1.068-0.409-1.476,0s-0.407,1.071,0,1.48l7.185,7.221L20.305,16.212z"></path>
                                    <path class="tatsu-svg-arrow-bar" fill-rule="evenodd" clip-rule="evenodd" d="M1,8h28.001c0.551,0,1,0.448,1,1c0,0.553-0.449,1-1,1H1c-0.553,0-1-0.447-1-1
                                        C0,8.448,0.447,8,1,8z"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}

        </div>
    </div>
    <div class="border-b border-black border-opacity-20"></div>

    <!-- Top Rated -->
    <div class="w-full max-w-screen-xl py-10 lg:py-20 mx-auto">
        <div class="text-center w-full px-4">
            <h2 class="text-3xl md:text-5xl md:mb-4">{{c_topRatedTitle}}</h2>
            <p class="text-base md:text-lg max-w-lg mx-auto">{{c_topRatedDescription}}</p>
        </div>
        <div class="w-full flex flex-wrap">
            {{#each c_topRatedProducts}}
                <div class="group cursor-pointer w-1/2 md:w-1/4 px-4 text-center mt-8 lg:mt-16">
                    <div class="relative h-0 inline-block w-full pb-[80%] overflow-hidden group-hover:bg-black group-hover:bg-opacity-5">
                        {{#each photoGallery}}
                            {{#if @first}} 
                                <img class="absolute top-0 left-0 w-full h-full object-contain transition-all duration-1000 transform scale-100 group-hover:scale-150" src="{{image.url}}">
                            {{/if}}
                        {{/each}}
                        <a href="#" class="absolute bottom-0 left-0 w-full py-3 px-6 bg-primary text-white text-center text-sm font-medium uppercase transition-all duration-500 opacity-0 group-hover:opacity-100 invisible group-hover:visible hover:bg-secondary">
                            <svg class="w-4 h-4 inline-block mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                                <path fill="#fff" d="M569.354 231.631C512.969 135.949 407.81 72 288 72 168.14 72 63.004 135.994 6.646 231.631a47.999 47.999 0 0 0 0 48.739C63.031 376.051 168.19 440 288 440c119.86 0 224.996-63.994 281.354-159.631a47.997 47.997 0 0 0 0-48.738zM288 392c-75.162 0-136-60.827-136-136 0-75.162 60.826-136 136-136 75.162 0 136 60.826 136 136 0 75.162-60.826 136-136 136zm104-136c0 57.438-46.562 104-104 104s-104-46.562-104-104c0-17.708 4.431-34.379 12.236-48.973l-.001.032c0 23.651 19.173 42.823 42.824 42.823s42.824-19.173 42.824-42.823c0-23.651-19.173-42.824-42.824-42.824l-.032.001C253.621 156.431 270.292 152 288 152c57.438 0 104 46.562 104 104z"></path>
                            </svg>Quick View
                        </a>
                    </div>
                    <h3 class="text-lg font-semibold mb-2"><a href="#" class="hover:text-primary text-clip truncate inline-block w-full">{{name}}</a></h3>
                    <div class=""><strong class="font-medium">${{price.value}}</strong></div>
                </div>
            {{/each}}
        </div>
    </div>

    {{>newsletter}}
    {{>footer}}
</body>
</html>